<h1>Recent Expenses</h1>
<% if flash.has?(:message) %>
  <p class="flash-text"><%= flash[:message] %></p>
<% end %>
<table>
  <tr>
    <th>Date</th><th>Category</th><th>Description</th><th>Amount</th>
  </tr>

  <% @expenses.each do |expense| %>
  <tr>
    <td><%= expense.date.strftime('%D') %></td>
    <td><a href="/categories/<%= expense.category.slug %>"><%=
      expense.category.name %></a></td>
    <td><a href="/expenses/vendors/<%= expense.vendor %>"><%= expense.vendor %></td>
    <td>$<a class="float-right" href="/expenses/<%= expense.id %>">
    <%= expense.display_amount %></a></td>
  </tr>
  <% end %>

</table>

<a class="show-all-link" href="/expenses/all">show all</a>

<br></br>
<a href="/expenses/new" class="button-link">Add Expense</a>
