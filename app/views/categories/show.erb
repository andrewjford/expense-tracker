<h1><%= @category.name %></h1>

<table>
  <tr>
    <th>Date</th><th>Category</th><th>Description</th><th>Amount</th>
  </tr>

  <% @filtered_expenses.each do |expense| %>
  <tr>
    <td><%= expense.date.strftime('%D') %></td>
    <td><%= expense.category.name %></td>
    <td><a href="/expenses/vendors/<%= expense.vendor %>"><%=
    expense.vendor %></a></td>
    <td>$<a class="float-right" href="/expenses/<%= expense.id %>">
    <%= expense.display_amount %></a></td>
  </tr>
  <% end %>

</table>
<br>
<form class="inline" action="/categories/<%= @category.id%>/edit" method="get">
  <input type="submit" value="Edit">
</form>
<form class="inline" action="/categories/<%= @category.id%>" method="post">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete">
</form>
