<h1>Your Categories</h1>

<ul>
<% @categories.each do |category| %>
  <li><%= category.name %></li>
<% end %>
</ul>
<br>
<form action="/categories" method="post">
  <label for="name">New Category: </label><input type="text" id="name"
   name="name">
   <br></br>
   <input type="submit" value="Add Category">
</form>
